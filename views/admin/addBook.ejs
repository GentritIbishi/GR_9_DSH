<%- include ('../partials/header'); %>

<%- include ('../partials/adminNav') %>

<%- include ('../partials/alerts'); %>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card">
              <div class="card-header text-center">
                <h4>Shto liber</h4>
              </div>
                <div class="card-block">
                  <form class="p-3" action="/admin/books/add" method="POST">
                      
                    <div class="form-group">
                      <label class="form-control-label">Titulli</label>
                      <input type="text" name="book[title]" placeholder="Titulli i librit" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">Emri i autorit</label>
                      <input type="text" name="book[author]" placeholder="Emri i autorit" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">ISBN</label>
                      <input type="text" name="book[ISBN]" placeholder="ISBN" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">Kategoria</label>
                      <input type="text" name="book[category]" placeholder="Kategoria" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">Ne stok</label>
                      <input type="Number" name="book[stock]" placeholder="Ne stok" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">Pershkrimi i librit</label>
                      <textarea name="book[description]" cols="30" rows="10" class="form-control"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Shto librin</button>
                  </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
<script>
  CKEDITOR.replace('book[description]');
</script>

